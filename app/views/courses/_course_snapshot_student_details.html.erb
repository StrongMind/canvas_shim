<h3 class="studentDetails-heading">
    Student Details <span>(<%= pluralize(@student_count, 'active student') %>)</span>
</h3>

<table id="studentDetails">
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Days Since Active</th>
      <th>Days Since Last Submission</th>
      <th>Missing Assignments</th>
      <th>Current Score</th>
      <th>Course Progress</th>
      <th>Requirements Completed</th>
      <th>Alerts</th>
    </tr>
  </thead>

  <tbody>
    <% @context.active_students.each do |student| %>
      <tr class="course-snapshot-detail-row" data-course-id=<%= @context.id %> data-enr-id=<%= student.id %>>
        <td><%= link_to student.user.name, course_user_path(@context, student.user), class: "course-snapshot-link-color" %></td>
        <td class="enr-last-active">
          Waiting...
        </td>
        <td class="enr-last-submission">
          Waiting...
        </td>
        <td class="enr-missing-assignments">
          Waiting...
        </td>
        <td class="enr-current-score">
          Waiting...
        </td>
        <td class="enr-progress-bar">
          <div class="progress" data-label='Waiting...'>
            <span class="value">
              <span style="display: none;"></span>
            </span>
          </div>
        </td>
        <td class="enr-requirements-completed">
          Waiting...
        </td>
        <td class="enr-alerts-count">
          Waiting...
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
